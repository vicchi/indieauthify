{% extends "base.html.j2" %}
{% import "includes/macros/alerts.html.j2" as alerts %}
{% block content %}
<div class="pt-12 prose dark:prose-invert hover:prose-a:text-blue-500 max-w-full">
    {{ alerts.flash_alerts(request) }}
    <h2>Login</h2>
    <form method="POST" action="/login">
        <p>To log in, please provide your domain name.
        Your domain must include at least one <code>rel="me"</code> link on its home page for authentication to work.</p>
        <div class="text-gray-700 pb-4">
            <label class="block mb-1" for="domain_url">Domain URL:</label>
            <input class="w-full h-10 px-3 text-base placeholder-gray-600 border rounded-lg focus:shadow-outline" type="url" type="url" name="domain" placeholder="Your domain name" pattern="https?://.+" required />
        </div>
        <button type="submit" class="h-10 px-5 text-gray-700 hover:text-purple-400 dark:text-gray-200 dark:hover:text-purple-400 transition-colors duration-150 border border-purple-400 rounded-lg focus:shadow-outline">Login</button>
    </form>
</div>
{% endblock %}